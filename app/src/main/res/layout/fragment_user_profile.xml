                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="email: "
                            android:textColor="@color/gray"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/emailTextId"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/emailTextId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RandomUsername@tiscali.it"
                            android:textColor="@color/gray"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/modifyEmailButton"
                            app:layout_constraintStart_toEndOf="@id/textView2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/modifyEmailButton"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_baseline_create_24"
                            android:backgroundTint="@color/orange"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/emailTextId"
                            app:layout_constraintTop_toTopOf="parent" />

