<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-48dp">

        <LinearLayout
            android:id="@+id/page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/translucentWhite"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profilePicCardView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:shape="ring"
                        app:cardCornerRadius="40dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <!--android:elevation="12dp"
                        android:layout_centerHorizontal="true"
                        android:innerRadius="0dp"
                        android:thicknessRatio="1.9"
                        -->

                        <ImageButton
                            android:id="@+id/userProfilePic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/user_icon"/>

                    </androidx.cardview.widget.CardView>

                    <!--
                     <ImageButton
                        android:id="@+id/userProfilePic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/user_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                        -->

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:text="Username"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/profilePicCardView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/modifyUsernameButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_baseline_create_24"
                        android:backgroundTint="@color/orange"
                        android:tint="@color/ic_launcher_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/username"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <ProgressBar
                    android:id="@+id/xpProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/header_style_doc"
                        android:text=" objectives "
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/header_style_doc"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <Space
                            android:layout_width="5dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/levelTextId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <Space
                            android:layout_width="5dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <Space
                            android:layout_width="5dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/badgeTextId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Novice"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <Space
                            android:layout_width="5dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--Medals-->

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/landscapes_not_awarded_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/not_awarded_medal" />

                        <ImageButton
                            android:id="@+id/bronze_landscapes_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bronze_landscapes_medal" />

                        <ImageButton
                            android:id="@+id/silver_landscapes_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/silver_landscapes_medal" />

                        <ImageButton
                            android:id="@+id/gold_landscapes_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/gold_landscapes_medal" />

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/character_design_not_awarded_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/not_awarded_medal" />

                        <ImageButton
                            android:id="@+id/bronze_character_design_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bronze_character_design_medal" />

                        <ImageButton
                            android:id="@+id/silver_character_design_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/silver_character_design_medal" />

                        <ImageButton
                            android:id="@+id/gold_character_design_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/gold_character_design_medal" />

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/comics_not_awarded_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/not_awarded_medal" />

                        <ImageButton
                            android:id="@+id/bronze_comics_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bronze_comics_medal" />

                        <ImageButton
                            android:id="@+id/silver_comics_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/silver_comics_medal" />

                        <ImageButton
                            android:id="@+id/gold_comics_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/gold_comics_medal" />

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/logos_not_awarded_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/not_awarded_medal" />

                        <ImageButton
                            android:id="@+id/bronze_logos_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bronze_logos_medal" />

                        <ImageButton
                            android:id="@+id/silver_logos_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/silver_logos_medal" />

                        <ImageButton
                            android:id="@+id/gold_logos_medal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/gold_logos_medal" />

                    </LinearLayout>


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
